@model DigitalLibrary.Models.ViewModels.BookVM

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
   <input asp-for="Book.Id" hidden />
   <input asp-for="Book.ImageURL" hidden />
   <input asp-for="Book.BookURL" hidden />
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Got it ? Nice !</h2>
           <hr />
       </div>

       <div class="row mb-3">
           <div class="col-2">
               <label asp-for="Book.BookTypeId">What type You have ?</label>
           </div>
           <div class="col-4">
               <select asp-for="Book.BookTypeId" asp-items="@Model.BookType" class="form-control">
                   <option disabled selected>---Select Book Type---</option>
               </select>
               <span asp-validation-for="Book.BookTypeId" class="text-danger"></span>
           </div>
           <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:100%">Put it in a queue</button>
            </div>
       </div>
             
        <div class="row mb-3">
            
        </div>
        <div class="row mb-3">
            <div class="col-12">
                <a asp-controller="WishList" asp-action="Index" class="btn btn-info" style="width:100%">No I don't have it yet</a>
            </div>
        </div>
    </div>

</form>