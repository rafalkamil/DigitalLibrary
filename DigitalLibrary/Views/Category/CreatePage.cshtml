@model Category

<form method="post" asp-action="Create">
    <div class="row pb-2">
        <h2 class="text-primary">Add New Category</h2>
        <br/>
    </div>
    <div asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-5">
            <input asp-for="CategoryName" class="form-control" placeholder="Category Name"/>
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="col-3">
            <button type="submit" class="btn btn-primary" style="width:100%">Create!</button>
        </div>
        <div class="col-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-dark">Take me back</a>
        </div>
    </div>


</form>
