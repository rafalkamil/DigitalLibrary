@model DigitalLibrary.Models.ViewModels.BookVM

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
   <input asp-for="Book.Id" hidden />
   <input asp-for="Book.ImageURL" hidden />
   <input asp-for="Book.BookURL" hidden />
   <input asp-for="Book.Title" hidden />
   <input asp-for="Book.Author" hidden />
   <input asp-for="Book.CategoryId" hidden />
   <input asp-for="Book.StatusId" hidden/>
   <input asp-for="Book.Description" hidden />
   <input asp-for="Book.Grade1" hidden/>
   <input asp-for="Book.Grade2" hidden/>
   <input asp-for="Book.Grade3" hidden/>
   <input asp-for="Book.Grade4" hidden/>
   <input asp-for="Book.Grade5" hidden/>

   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Another book to the wall</h2>
           <hr />
       </div>

       <div class="row mb-3">
           <div class="col-4">
               <img src="@Model.Book.ImageURL" style="border-radius:5px;border:1px;width:50%"/>
           </div>
           <div class="col-3">
               <div class="row-mb-3">
                   <label asp-for="Book.BookTypeId">What type You got ?</label>
               </div>
               <div class="row-mb-3">
                   <select asp-for="Book.BookTypeId" asp-items="@Model.BookType" class="form-control">
                   <option>---Select Book Type---</option>
                   </select>
                   <span asp-validation-for="Book.BookTypeId" class="text-danger"></span>
               </div>
           </div>
           <div class="col-4">
               <div class="row mb-3">
                    <button type="submit" class="btn btn-primary" style="width:100%">Time to read</button>
               </div>
               <div class="row mb-3">
                <a asp-controller="Book" asp-action="WishListPage" class="btn btn-primary" style="width:100%">Take Me Back</a>
               </div>
           </div>          
       </div>
    </div>
</form>